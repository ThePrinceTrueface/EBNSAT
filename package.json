{
	"name": "iptv-ebnst-server",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"ts:build": "tsc",
		"start": "node build/index.js",
		"build": "esbuild ./index.ts --bundle --platform=node --outdir=build --format=esm --packages=external",
		"dev": "nodemon --watch build build/index.js",
		"watch": "esbuild ./index.ts --bundle --platform=node --outdir=build --format=esm --packages=external --watch"
	},
	"dependencies": {
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"express-ejs-layouts": "^2.5.1",
		"multer": "^2.0.2",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@types/express": "^4.17.23",
		"@types/express-ejs-layouts": "^2.5.4",
		"@types/multer": "^2.0.0",
		"@types/node": "^20.5.0",
		"esbuild": "^0.25.11",
		"nodemon": "^3.0.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6"
	}
}
